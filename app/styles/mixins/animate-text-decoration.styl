animate-text-decoration($border-color = #FFF)
  display inline-block
  position relative

  &:before
    content ""
    position absolute
    width 100%
    height 2px
    bottom -0.2em
    left 0
    background-color $border-color
    visibility hidden
    transform scaleX(0)
    transition all 0.3s ease-in-out 0s


  .slide-menu_menu_item:hover &:before
    visibility visible
    transform scaleX(1)
